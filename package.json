    "slug": "^0.9.1"
  },
  "engines": {
    "node": "^8.9.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.4.1",
